    "rollup": "^4.55.1",
    "self": "npm:god-bless-your-code@^0.6.1",
    "ts-unused-exports": "^11.0.1",
    "tsdown": "^0.19.0",
    "typescript": "^5.9.3",
    "unplugin-unused": "^0.5.6",
    "vite": "^7.3.1",
    "vitest": "^4.0.17",
    "vue": "^3.5.27"
